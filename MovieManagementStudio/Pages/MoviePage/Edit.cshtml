@page
@model MovieManagementStudio.Pages.MoviePage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Movie.Id" />
            <div class="form-group">
                <label asp-for="Movie.MovieName" class="control-label"></label>
                <input asp-for="Movie.MovieName" class="form-control" />
                <span asp-validation-for="Movie.MovieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Plot" class="control-label"></label>
                <input asp-for="Movie.Plot" class="form-control" />
                <span asp-validation-for="Movie.Plot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.ReleaseYear" class="control-label"></label>
                <input asp-for="Movie.ReleaseYear" class="form-control" />
                <span asp-validation-for="Movie.ReleaseYear" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Movie.IsBlockBuster" /> @Html.DisplayNameFor(model => model.Movie.IsBlockBuster)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Movie.CreatedDt" class="control-label"></label>
                <input asp-for="Movie.CreatedDt" class="form-control" />
                <span asp-validation-for="Movie.CreatedDt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
